html(lang="en")
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title About Dr. Anthony Craig
		meta(name="description" content="Learn more about Dr. Anthony Craig")
		include partials/_favicons

		// Open Graph and Twitter Cards
		meta(property="og:locale" content="en_US")
		meta(property="og:site_name" content="Anthony Craig, DDS")
		meta(property="og:type" content="website")
		meta(property="og:title" content="About Dr. Anthony Craig")
		meta(property="article:author" content="https://www.facebook.com/toniwonkanobi")
		meta(property="og:description" content="Learn more about Dr. Anthony Craig.")
		meta(property="og:image" content="images/AnthonyCraigDDS.jpg")
		meta(name="twitter:site" content="@anthonycraigdds")
		meta(name="twitter:creator" content="@anthonycraigdds")
		meta(name="twitter:title" content="About Dr. Anthony Craig")
		meta(name="twitter:card" content="summary")
		meta(name="twitter:description" content="Learn more about Dr. Anthony Craig.")
		meta(name="twitter:image" content="AnthonyCraigDDS.jpg")

		// Stylesheets
		link(rel="stylesheet" type="text/css" href="css/styles.css")
		link(rel="stylesheet" type="text/css" href="//cloud.typography.com/7099154/7092752/css/fonts.css")
